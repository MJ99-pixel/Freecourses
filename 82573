    <script>
      // Countdown Timer (set to 3 days from now for demo)
      function startCountdown(duration, display) {
        function update() {
          let t = duration - Math.floor((Date.now() - start) / 1000);
          if (t < 0) t = 0;
          let d = Math.floor(t / 86400),
              h = Math.floor((t % 86400) / 3600),
              m = Math.floor((t % 3600) / 60),
              s = t % 60;
          display.textContent = `${d.toString().padStart(2,'0')}d ` +
                               `${h.toString().padStart(2,'0')}h ` +
                               `${m.toString().padStart(2,'0')}m ` +
                               `${s.toString().padStart(2,'0')}s`;
          if (t > 0) setTimeout(update, 1000);
        }
        let start = Date.now();
        update();
      }
      document.addEventListener("DOMContentLoaded", function() {
        let timer = document.getElementById('timer');
        startCountdown(3*24*3600+12*3600+15*60+44, timer);

        // Locker triggers for both "Join Free Class Now" buttons
        document.getElementById('showLockerBtnHeader').onclick = function(e) {
          e.preventDefault();
          document.getElementById('locker').classList.add('show');
        };
        document.getElementById('showLockerBtnSignup').onclick = function(e) {
          e.preventDefault();
          document.getElementById('locker').classList.add('show');
        };
      });

      // Locker logic functions
      function showAfterAction() {
        document.getElementById('afterActionMsg').style.display = 'block';
      }
      function unlockContent() {
        document.getElementById('locker').classList.remove('show');
      }
    </script>
